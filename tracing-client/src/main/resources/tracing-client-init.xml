<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--dstCollectorService-->
    <dubbo:reference id="tracingCollector" interface="net.dubboclub.tracing.api.TracingCollector" check="false"
                     filter="-dst" timeout="2000">
    </dubbo:reference>

    <bean id="configuration" class="net.dubboclub.tracing.client.Configuration">
        <property name="flushSize" value="1024"></property>
        <property name="queueSize" value="102400"></property>
    </bean>
    <bean id="syncTransfer" class="net.dubboclub.tracing.client.support.DefaultSyncTransfer">
        <property name="collector" ref="tracingCollector"/>
        <constructor-arg ref="configuration"/>
    </bean>
    <!--被DstFilter使用-->
    <bean id="tracer" class="net.dubboclub.tracing.client.Tracer">
        <property name="syncTransfer" ref="syncTransfer"/>
    </bean>

</beans>